<div class="container-sm justify-content-center mt-5 align-items-center d-flex">

    <div class="row">

        <form class="container-fluid w-50 shadow p-3 mb-5 bg-body rounded col-sm-12 col-md-10" method="post"
            action="/alerta/edit/{{alerta.id}}">
            <h2 class="">Actualizar Alerta</h2>
            
            <div class="row">
                <div class="mb-3 col-12">
                    <label for="nombre" class="col-form-label">Nombre:</label>
                    <input type="text" required class="form-control" id="nombre" name="nombre"
                        value="{{alerta.nombre}}">
                </div>

                <div class="mb-3 col-12">
                    <label for="apellido" class="col-form-label">Descripcion: </label>
                    <input type="text" required class="form-control" id="descripcion" name="descripcion"
                        value="{{alerta.descripcion}}">
                </div>

            </div>

            <div class="row">

                        <div class="mb-3 col-6">
                            <label for="nombreD" class="col-form-label">Nombre Daño:</label>
                            <input type="text" required class="form-control" id="nombreD" name="nombreD" value="{{alerta.Daño.nombre}}">
                        </div>

                        <div class="mb-3 col-6">
                            <label for="descripcionD" class="col-form-label">Descripcion: </label>
                            <input type="text" class="form-control" id="descripcionD" name="descripcionD" value="{{alerta.Daño.descripcion}}">
                        </div>
                    </div>   
                                                




            <div class="modal-footer">
                <a href="/alerta" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                        <path fill-rule="evenodd"
                            d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                    </svg>
                    Volver
                </a>
                <button type="submit" class="btn btn-primary ms-2">

                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-pencil-fill" viewBox="0 0 16 16">

                        <path
                            d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                    Actualizar
                </button>
            </div>
        </form>


    </div>
</div>
