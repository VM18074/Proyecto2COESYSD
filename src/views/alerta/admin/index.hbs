                    <td>{{nombre}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{activo}}</td>
                    <td>{{Daño.nombre}}</td>
                    <td>{{nivelAlerta}}</td>
                    <td>{{Ubicacion.departamento}}</td>
                    <td>{{Ubicacion.municipio}}</td>
                    <td>{{Medida.nombre}}</td>

                    <td>
