
<div class="container mt-2">
    
    
    <div class="scrollable shadow p-2 mb-5 bg-body  rounded">
        
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Activo</th>
                    <th scope="col">Daños</th>                  
                    <th scope="col">Nivel</th>
                    <th scope="col">Departamento</th>
                    <th scope="col">Municipio</th>
                    <th colspan="2" scope="col">Respuesta</th>

                </tr>
            </thead>
            <tbody>
                {{#each dataRows}}
                    {{#if activo}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{activo}}</td> 
                    <td>{{Daño.nombre}}</td>
                    <td>{{nivelAlerta}}</td>  
                    <td>{{Ubicacion.departamento}}</td>
                    <td>{{Ubicacion.municipio}}</td>
                    <td>{{Medida.nombre}}</td>                           

                    <td>
                        <a class="btn btn-danger" href="/alerta/activar/{{id}}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-journal-x" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M6.146 6.146a.5.5 0 0 1 .708 0L8 7.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 8l1.147 1.146a.5.5 0 0 1-.708.708L8 8.707 6.854 9.854a.5.5 0 0 1-.708-.708L7.293 8 6.146 6.854a.5.5 0 0 1 0-.708z"/>
                                <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"/>
                                <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{descripcion}}</td>
                    <td>{{activo}}</td>
                    <td>{{Daño.nombre}}</td>
                    <td>{{nivelAlerta}}</td> 
                    <td>{{Ubicacion.departamento}}</td>
                    <td>{{Ubicacion.municipio}}</td>
                    <td>{{Medida.nombre}}</td> 

                    <td>
                        <a class="btn btn-success" href="/alerta/activar/{{id}}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        </a>

                        <a class="btn btn-danger" href="/alerta/delete/{{id}}">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path
                                    d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                        </a>
                    </td>
                </tr>
                {{/if}}
                    {{/each}}
            </tbody>
        </table>
        

        
    </div>
