<div class="container-sm justify-content-center mt-5 align-items-center d-flex">

    <div class="row">

        <form class="container-fluid mw-75 shadow p-3 mb-5 bg-body rounded col-sm-12 col-md-10" method="post"
            action="/admins/edit/{{user.UsuarioId}}">
            <h2 class="">Editar Administrador</h2>
            <div class="row">
                <div class="mb-3 col-12">
                    <label for="nombre" class="col-form-label">Nombres:</label>
                    <input type="text" required class="form-control" id="nombre" name="nombre" value="{{user.nombre}}">
                </div>

                <div class="mb-3 col-12">
                    <label for="apellido" class="col-form-label">Apellidos: </label>
                    <input type="text" required class="form-control" id="apellido" name="apellido"
                        value="{{user.apellido}}">
                </div>
            </div>

            <div class="row">



                <div class="mb-3 col-12">
                    <label for="telefono" class="col-form-label">Tel√©fono</label>
                    <input type="tel" required maxlength="8" pattern="[0-9]{8}" value="{{user.telefono}}"
                        class="form-control" minlength="8" id="telefono" name="telefono">
                </div>
            </div>

            <div class="modal-footer">
                <a href="/admins" class="btn btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-box-arrow-left" viewBox="0 0 16 16">
